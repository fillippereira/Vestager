@model Vestager.Domain.Entities.Cliente

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-10">
        <h4>Editar Cliente</h4>
        <hr />
        <form asp-action="Edit">
            <div class="row">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="UserID" />
                <div class="form-group col-lg-4">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control form-control-sm" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-2">
                    <label asp-for="Nascimento" class="control-label"></label>
                    <input asp-for="Nascimento" class="form-control form-control-sm" />
                    <span asp-validation-for="Nascimento" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-2">
                    <label asp-for="Sexo" class="control-label"></label>
                    <select asp-for="Sexo" class="form-control form-control-sm">
                        <option>Feminino</option>
                        <option>Masculino</option>
                        <option>Outro</option>
                    </select>
                    <span asp-validation-for="Sexo" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-2">
                    <label asp-for="RG" class="control-label"></label>
                    <input asp-for="RG" class="form-control form-control-sm" />
                    <span asp-validation-for="RG" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-2">
                    <label asp-for="CPF" class="control-label"></label>
                    <input asp-for="CPF" class="form-control form-control-sm" />
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-3">
                    <label asp-for="Celular" class="control-label"></label>
                    <input asp-for="Celular" class="form-control form-control-sm" />
                    <span asp-validation-for="Celular" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-3">
                    <label asp-for="Telefone" class="control-label"></label>
                    <input asp-for="Telefone" class="form-control form-control-sm" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control form-control-sm" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-3">
                    <label asp-for="CEP" class="control-label"></label>
                    <input asp-for="CEP" class="form-control form-control-sm" />
                    <span asp-validation-for="CEP" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-7">
                    <label asp-for="Endereco" class="control-label"></label>
                    <input asp-for="Endereco" class="form-control form-control-sm" />
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-2">
                    <label asp-for="Numero" class="control-label"></label>
                    <input asp-for="Numero" class="form-control form-control-sm" />
                    <span asp-validation-for="Numero" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-4">
                    <label asp-for="Complemento" class="control-label"></label>
                    <input asp-for="Complemento" class="form-control form-control-sm" />
                    <span asp-validation-for="Complemento" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-3">
                    <label asp-for="Bairro" class="control-label"></label>
                    <input asp-for="Bairro" class="form-control form-control-sm" />
                    <span asp-validation-for="Bairro" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-3">
                    <label asp-for="Cidade" class="control-label"></label>
                    <input asp-for="Cidade" class="form-control form-control-sm" />
                    <span asp-validation-for="Cidade" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-2">
                    <label asp-for="Estado" class="control-label"></label>
                    <input asp-for="Estado" class="form-control form-control-sm" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
                <div class="form-group col-12">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <div>
                        <a asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </form>

       

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }

    </div>
</div>