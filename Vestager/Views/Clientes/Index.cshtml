@model IEnumerable<Vestager.Domain.Entities.Cliente>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-6">
        <h1>Clientes</h1>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary btn-sm" asp-action="Create">Novo Cliente</a>
    </div>
</div>

<div class="row" style="height:90%">
    <div class="col-12 h-100 ">
        <table class="table table-hover table-sm table-striped shadow-sm">
            <thead class="text-center">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nascimento)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sexo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Telefone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RG)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CPF)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nascimento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sexo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RG)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CPF)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>

                        <td>
                            <a class="btn btn-sm btn-warning pt-0 pb-0" asp-action="Edit" asp-route-id="@item.UserID">Editar</a>
                            <a class="btn btn-sm btn-success pt-0 pb-0" asp-action="Details" asp-route-id="@item.UserID">Visualizar</a>
                            <a class="btn btn-sm btn-danger pt-0 pb-0" asp-action="Delete" asp-route-id="@item.UserID">Deletar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
