@model Vestager.Domain.Entities.Vestido

@{
    ViewData["Title"] = "Details";
}

<h2>Detalhes do Vestido</h2>

<hr />
<div class="row">
    <div class="col-4">
        <img src=@string.Concat("/Vestidos/", Model.UrlVestido) class="img-fluid" />
    </div>
    <div class="col-8">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cor)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Tamanho)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tamanho)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PrecoSugerido)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PrecoSugerido)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TipoVestido)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TipoVestido)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descricao)
            </dd>
        </dl>
        <div>
            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.VestidoID">Editar</a>
            <a class="btn btn-primary" asp-action="Index">Voltar</a>
        </div>

    </div>
</div>
